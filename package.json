{
  "name": "ts-node-lib-starter",
  "version": "1.0.0",
  "description": "nodejs typescript library starter",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "README.md"
  ],
  "scripts": {
    "dev": "webpack-dev-server --open",
    "build": "npm run lint && npm run bundle",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.ts\" --quiet --fix",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "bundle": "webpack",
    "watch-bundle": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dzz9143/ts-node-lib-starter.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dzz9143/ts-node-lib-starter/issues"
  },
  "homepage": "https://github.com/dzz9143/ts-node-lib-starter#readme",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.6",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^4.1.2",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "ts-jest": "^24.1.0",
    "ts-loader": "^7.0.3",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "lodash": "^4.17.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
